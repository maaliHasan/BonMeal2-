<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">fonts/abuhmeda-f2.ttf</item>
        <item name="actionMenuTextColor">@color/textColorPrimary</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>

    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
    <item name="titleTextStyle">@style/MyTitleTextStyle</item>
</style>
    <!-- ActionBar Style -->
    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">bold</item>
        <item name="fontPath">fonts/abuhmeda-f2.ttf</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/GothamProBold.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    </resources>
